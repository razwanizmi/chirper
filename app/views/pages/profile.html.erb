<h2>Profile</h2>
<div class="profile">
  <%= image_tag(
        current_user.avatar_url,
        class: "avatar avatar--profile",
        alt: "#{current_user.username} avatar",
      ) %>
  <hgroup>
    <h4>@<%= current_user.username %></h4>
    <p>
      <span>
        Chirper since <%= time_ago_in_words(current_user.created_at) %> ago
      </span>
      <br>
      <span>
        <%= pluralize(current_user.chirps.count, "chirp") %> and counting
      </span>
    </p>
  </hgroup>
</div>
<%= button_to "Sign Out",
      session_path,
      method: :delete,
      class: "secondary",
      data: { turbo_confirm: "Are you sure you want to sign out?" } %>
